<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="feeslip_by_students_form_view" model="ir.ui.view">
            <field name="name">feeslip.students.form.view</field>
            <field name="model">oe.feeslip.students</field>
            <field name="arch" type="xml">
                <form string="Feeslips by Students">
                    <span nolabel="1" colspan="2">This wizard will generate payslips for all selected students(s) based on the dates and credit note specified on Payslips Run.</span>
                    <separator string="Fee Structure"/>
                    <div class="o_row">
                        <p class="text-muted w-50">Set a specific structure if you wish to make an extra payslip (eg: End of the year bonus). If you leave this field empty, a regular payslip will be generated for all the selected students, based on their contracts configuration.</p>
                        <field name="fee_struct_id" nolabel="1"/>
                    </div>
                    <separator string="Department" colspan="2"/>
                    <div class="o_row">
                        <p class="text-muted w-50">Set a specific department if you wish to select all the students from this department (and subdepartments) at once.</p>
                    </div>
                    <separator string="Students"/>
                    <field name="student_ids" nolabel="1">
                        <list>
                            <field name="name"/>
                            <field name="email"/>
                        </list>
                    </field>
                    <footer>
                        <button string="Generate" name="compute_sheet" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_feeslip_by_students" model="ir.actions.act_window">
            <field name="name">Generate Feeslips</field>
            <field name="res_model">oe.feeslip.students</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="feeslip_by_students_form_view"/>
            <field name="target">new</field>
        </record>
