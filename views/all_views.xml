            <field name="res_model">silina.fee.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Student Fee Views -->
        <record id="view_student_fee_tree" model="ir.ui.view">
            <field name="name">silina.student.fee.tree</field>
            <field name="model">silina.student.fee</field>
            <field name="arch" type="xml">
                <list string="Frais Étudiants">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="fee_type_id"/>
                    <field name="academic_year_id"/>
                    <field name="amount"/>
                    <field name="amount_paid"/>
                    <field name="amount_due"/>
                    <field name="due_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_student_fee_form" model="ir.ui.view">
            <field name="name">silina.student.fee.form</field>
            <field name="model">silina.student.fee</field>
            <field name="arch" type="xml">
                <form string="Frais Étudiant">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_view_payments" string="Enregistrer Paiement" type="object"/>
                        <button name="action_create_invoice" string="Créer Facture" type="object" invisible="invoice_id"/>
                        <button name="action_view_invoice" string="Voir Facture" type="object" invisible="not invoice_id"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="student_id"/>
                                <field name="fee_type_id"/>
                                <field name="academic_year_id"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="amount_paid"/>
                                <field name="amount_due"/>
                                <field name="due_date"/>
                                <field name="installment_count"/>
                            </group>
