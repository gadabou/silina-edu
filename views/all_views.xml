<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- VUES POUR LES AUTRES MODÈLES - Versions simplifiées -->

        <!-- Level Views -->
        <record id="view_level_tree" model="ir.ui.view">
            <field name="name">silina.level.tree</field>
            <field name="model">silina.level</field>
            <field name="arch" type="xml">
                <list string="Niveaux">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="degree"/>
                    <field name="next_level_id"/>
                    <field name="classroom_count"/>
                </list>
            </field>
        </record>

        <record id="view_level_form" model="ir.ui.view">
            <field name="name">silina.level.form</field>
            <field name="model">silina.level</field>
            <field name="arch" type="xml">
                <form string="Niveau">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="degree"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="next_level_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_level" model="ir.actions.act_window">
            <field name="name">Niveaux</field>
            <field name="res_model">silina.level</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Classroom Views -->
        <record id="view_classroom_tree" model="ir.ui.view">
            <field name="name">silina.classroom.tree</field>
            <field name="model">silina.classroom</field>
            <field name="arch" type="xml">
                <list string="Classes">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="academic_year_id"/>
                    <field name="level_id"/>
                    <field name="main_teacher_id"/>
                    <field name="student_count"/>
                    <field name="capacity"/>
                </list>
            </field>
        </record>

        <record id="view_classroom_form" model="ir.ui.view">
            <field name="name">silina.classroom.form</field>
            <field name="model">silina.classroom</field>
            <field name="arch" type="xml">
                <form string="Classe">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_students" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="student_count" widget="statinfo" string="Étudiants"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="academic_year_id"/>
                            </group>
                            <group>
                                <field name="level_id"/>
                                <field name="main_teacher_id"/>
                                <field name="capacity"/>
                                <field name="room"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Étudiants">
                                <field name="student_ids"/>
                            </page>
                            <page string="Matières">
                                <field name="subject_assignment_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_classroom" model="ir.actions.act_window">
            <field name="name">Classes</field>
            <field name="res_model">silina.classroom</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Subject Views -->
        <record id="view_subject_tree" model="ir.ui.view">
            <field name="name">silina.subject.tree</field>
            <field name="model">silina.subject</field>
            <field name="arch" type="xml">
                <list string="Matières">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="subject_type"/>
                    <field name="coefficient"/>
                </list>
            </field>
        </record>

        <record id="view_subject_form" model="ir.ui.view">
            <field name="name">silina.subject.form</field>
            <field name="model">silina.subject</field>
            <field name="arch" type="xml">
                <form string="Matière">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="subject_type"/>
                            </group>
                            <group>
                                <field name="coefficient"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_subject" model="ir.actions.act_window">
            <field name="name">Matières</field>
            <field name="res_model">silina.subject</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Subject Assignment Views -->
        <record id="view_subject_assignment_tree" model="ir.ui.view">
            <field name="name">silina.subject.assignment.tree</field>
            <field name="model">silina.subject.assignment</field>
            <field name="arch" type="xml">
                <list string="Affectations">
                    <field name="classroom_id"/>
                    <field name="subject_id"/>
                    <field name="teacher_id"/>
                    <field name="academic_year_id"/>
                    <field name="hours_per_week"/>
                </list>
            </field>
        </record>

        <record id="view_subject_assignment_form" model="ir.ui.view">
            <field name="name">silina.subject.assignment.form</field>
            <field name="model">silina.subject.assignment</field>
            <field name="arch" type="xml">
                <form string="Affectation">
                    <sheet>
                        <group>
                            <group>
                                <field name="classroom_id"/>
                                <field name="subject_id"/>
                            </group>
                            <group>
                                <field name="teacher_id"/>
                                <field name="hours_per_week"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_subject_assignment" model="ir.actions.act_window">
            <field name="name">Affectations Matières</field>
            <field name="res_model">silina.subject.assignment</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Teacher Views -->
        <record id="view_teacher_tree" model="ir.ui.view">
            <field name="name">silina.teacher.tree</field>
            <field name="model">silina.teacher</field>
            <field name="arch" type="xml">
                <list string="Enseignants">
                    <field name="teacher_code"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="specialization"/>
                    <field name="classroom_count"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_teacher_form" model="ir.ui.view">
            <field name="name">silina.teacher.form</field>
            <field name="model">silina.teacher</field>
            <field name="arch" type="xml">
                <form string="Enseignant">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                            <div><field name="teacher_code"/></div>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="specialization"/>
                                <field name="qualification"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Matières">
                                <field name="subject_ids"/>
                            </page>
                            <page string="Affectations">
                                <field name="subject_assignment_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_teacher" model="ir.actions.act_window">
            <field name="name">Enseignants</field>
            <field name="res_model">silina.teacher</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Student Views - Version simplifiée -->
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">silina.student.tree</field>
            <field name="model">silina.student</field>
            <field name="arch" type="xml">
                <list string="Étudiants">
                    <field name="registration_number"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="date_of_birth"/>
                    <field name="classroom_id"/>
                    <field name="academic_year_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_student_form" model="ir.ui.view">
            <field name="name">silina.student.form</field>
            <field name="model">silina.student</field>
            <field name="arch" type="xml">
                <form string="Étudiant">
                    <header>
                        <button name="action_enroll" string="Inscrire" type="object" invisible="state != 'draft'"/>
                        <button name="action_promote" string="Admettre" type="object" invisible="state != 'enrolled'"/>
                        <button name="action_generate_report_card" string="Bulletin de Notes" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                            <div><field name="registration_number"/></div>
                        </div>
                        <group>
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="gender"/>
                                <field name="date_of_birth"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="academic_year_id"/>
                                <field name="classroom_id"/>
                                <field name="level_id"/>
                                <field name="enrollment_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Informations de contact">
                                <group>
                                    <group>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                    </group>
                                    <group>
                                        <field name="street"/>
                                        <field name="city"/>
                                        <field name="country_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Parents/Tuteurs">
                                <field name="parent_ids"/>
                            </page>
                            <page string="Documents">
                                <field name="document_ids"/>
                            </page>
                            <page string="Frais Scolaires">
                                <group>
                                    <field name="total_fees"/>
                                    <field name="total_paid"/>
                                    <field name="total_due"/>
                                </group>
                                <field name="fee_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Étudiants</field>
            <field name="res_model">silina.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Parent Views -->
        <record id="view_parent_tree" model="ir.ui.view">
            <field name="name">silina.parent.tree</field>
            <field name="model">silina.parent</field>
            <field name="arch" type="xml">
                <list string="Parents/Tuteurs">
                    <field name="name"/>
                    <field name="relation"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="student_count"/>
                    <field name="is_financial_responsible"/>
                </list>
            </field>
        </record>

        <record id="view_parent_form" model="ir.ui.view">
            <field name="name">silina.parent.form</field>
            <field name="model">silina.parent</field>
            <field name="arch" type="xml">
                <form string="Parent/Tuteur">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="relation"/>
                                <field name="gender"/>
                                <field name="occupation"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                            </group>
                        </group>
                        <group>
                            <field name="is_emergency_contact"/>
                            <field name="is_financial_responsible"/>
                            <field name="can_pickup"/>
                        </group>
                        <notebook>
                            <page string="Étudiants">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_parent" model="ir.actions.act_window">
            <field name="name">Parents/Tuteurs</field>
            <field name="res_model">silina.parent</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Student Document Views -->
        <record id="view_student_document_tree" model="ir.ui.view">
            <field name="name">silina.student.document.tree</field>
            <field name="model">silina.student.document</field>
            <field name="arch" type="xml">
                <list string="Documents">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="document_type"/>
                    <field name="date"/>
                    <field name="is_verified"/>
                </list>
            </field>
        </record>

        <record id="view_student_document_form" model="ir.ui.view">
            <field name="name">silina.student.document.form</field>
            <field name="model">silina.student.document</field>
            <field name="arch" type="xml">
                <form string="Document">
                    <header>
                        <button name="action_verify" string="Vérifier" type="object" invisible="is_verified"/>
                        <button name="action_unverify" string="Annuler Vérification" type="object" invisible="not is_verified"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="student_id"/>
                                <field name="document_type"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="expiry_date"/>
                                <field name="is_verified"/>
                            </group>
                        </group>
                        <group>
                            <field name="document" filename="document_filename"/>
                            <field name="document_filename" invisible="1"/>
                        </group>
                        <field name="description"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_student_document" model="ir.actions.act_window">
            <field name="name">Documents Étudiants</field>
            <field name="res_model">silina.student.document</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Exam Views -->
        <record id="view_exam_tree" model="ir.ui.view">
            <field name="name">silina.exam.tree</field>
            <field name="model">silina.exam</field>
            <field name="arch" type="xml">
                <list string="Examens">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="exam_type"/>
                    <field name="academic_year_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="result_count"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_exam_form" model="ir.ui.view">
            <field name="name">silina.exam.form</field>
            <field name="model">silina.exam</field>
            <field name="arch" type="xml">
                <form string="Examen">
                    <header>
                        <button name="action_schedule" string="Programmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_start" string="Démarrer" type="object" invisible="state != 'scheduled'"/>
                        <button name="action_complete" string="Terminer" type="object" invisible="state != 'in_progress'"/>
                        <button name="action_view_results" string="Voir Résultats" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="exam_type"/>
                                <field name="academic_year_id"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="total_marks"/>
                                <field name="passing_marks"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Classes">
                                <field name="classroom_ids"/>
                            </page>
                            <page string="Matières">
                                <field name="subject_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_exam" model="ir.actions.act_window">
            <field name="name">Examens</field>
            <field name="res_model">silina.exam</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Exam Result Views -->
        <record id="view_exam_result_tree" model="ir.ui.view">
            <field name="name">silina.exam.result.tree</field>
            <field name="model">silina.exam.result</field>
            <field name="arch" type="xml">
                <list string="Résultats" editable="bottom">
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="subject_id"/>
                    <field name="classroom_id"/>
                    <field name="marks_obtained"/>
                    <field name="total_marks"/>
                    <field name="percentage"/>
                    <field name="grade"/>
                    <field name="is_passed"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_exam_result_form" model="ir.ui.view">
            <field name="name">silina.exam.result.form</field>
            <field name="model">silina.exam.result</field>
            <field name="arch" type="xml">
                <form string="Résultat d'Examen">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_draft" string="Remettre en brouillon" type="object" invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="exam_id"/>
                                <field name="student_id"/>
                                <field name="subject_id"/>
                                <field name="classroom_id"/>
                            </group>
                            <group>
                                <field name="marks_obtained"/>
                                <field name="total_marks"/>
                                <field name="passing_marks"/>
                                <field name="percentage"/>
                                <field name="grade"/>
                                <field name="is_passed"/>
                            </group>
                        </group>
                        <field name="remarks"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_exam_result" model="ir.actions.act_window">
            <field name="name">Résultats d'Examens</field>
            <field name="res_model">silina.exam.result</field>
            <field name="view_mode">list,form</field>
        </record>

