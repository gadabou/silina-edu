<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Subject Views -->
        <record id="view_subject_tree" model="ir.ui.view">
            <field name="name">silina.subject.tree</field>
            <field name="model">silina.subject</field>
            <field name="arch" type="xml">
                <list string="Matières">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="subject_type"/>
                    <field name="coefficient"/>
                </list>
            </field>
        </record>

        <record id="view_subject_form" model="ir.ui.view">
            <field name="name">silina.subject.form</field>
            <field name="model">silina.subject</field>
            <field name="arch" type="xml">
                <form string="Matière">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="subject_type"/>
                            </group>
                            <group>
                                <field name="coefficient"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_subject" model="ir.actions.act_window">
            <field name="name">Matières</field>
            <field name="res_model">silina.subject</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>


        <!-- Action pour créer en mode modal -->
        <record id="action_subject_create" model="ir.actions.act_window">
            <field name="name">Nouvelle Matière</field>
            <field name="res_model">silina.subject</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
