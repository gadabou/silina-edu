<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Fee Type Views -->
        <record id="view_fee_type_tree" model="ir.ui.view">
            <field name="name">silina.fee.type.tree</field>
            <field name="model">silina.fee.type</field>
            <field name="arch" type="xml">
                <list string="Types de Frais">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="fee_category"/>
                    <field name="amount"/>
                    <field name="is_mandatory"/>
                    <field name="allow_installment"/>
                </list>
            </field>
        </record>

        <record id="view_fee_type_form" model="ir.ui.view">
            <field name="name">silina.fee.type.form</field>
            <field name="model">silina.fee.type</field>
            <field name="arch" type="xml">
                <form string="Type de Frais">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="fee_category"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="is_mandatory"/>
                                <field name="allow_installment"/>
                                <field name="installment_count" invisible="not allow_installment"/>
                                <field name="sequence"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_fee_type" model="ir.actions.act_window">
            <field name="name">Types de Frais</field>
            <field name="res_model">silina.fee.type</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>


        <!-- Action pour crÃ©er en mode modal -->
        <record id="action_fee_type_create" model="ir.actions.act_window">
            <field name="name">Nouveau Type de Frais</field>
            <field name="res_model">silina.fee.type</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
