<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Exam Result Views -->
        <record id="view_exam_result_tree" model="ir.ui.view">
            <field name="name">silina.exam.result.tree</field>
            <field name="model">silina.exam.result</field>
            <field name="arch" type="xml">
                <list string="Résultats" editable="bottom">
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="subject_id"/>
                    <field name="classroom_id"/>
                    <field name="marks_obtained"/>
                    <field name="total_marks"/>
                    <field name="percentage"/>
                    <field name="grade"/>
                    <field name="is_passed"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_exam_result_form" model="ir.ui.view">
            <field name="name">silina.exam.result.form</field>
            <field name="model">silina.exam.result</field>
            <field name="arch" type="xml">
                <form string="Résultat d'Examen">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_draft" string="Remettre en brouillon" type="object" invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="exam_id"/>
                                <field name="student_id"/>
                                <field name="subject_id"/>
                                <field name="classroom_id"/>
                            </group>
                            <group>
                                <field name="marks_obtained"/>
                                <field name="total_marks"/>
                                <field name="passing_marks"/>
                                <field name="percentage"/>
                                <field name="grade"/>
                                <field name="is_passed"/>
                            </group>
                        </group>
                        <field name="remarks"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_exam_result" model="ir.actions.act_window">
            <field name="name">Résultats d'Examens</field>
            <field name="res_model">silina.exam.result</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>

        <!-- Exam Result Summary Views -->
        <record id="view_exam_result_summary_tree" model="ir.ui.view">
            <field name="name">silina.exam.result.summary.tree</field>
            <field name="model">silina.exam.result.summary</field>
            <field name="arch" type="xml">
                <list string="Résumés">
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="classroom_id"/>
                    <field name="average"/>
                    <field name="percentage"/>
                    <field name="grade"/>
                    <field name="rank"/>
                    <field name="is_passed"/>
                </list>
            </field>
        </record>

        <record id="action_exam_result_summary" model="ir.actions.act_window">
            <field name="name">Résumés d'Examens</field>
            <field name="res_model">silina.exam.result.summary</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Action pour créer en mode modal -->
        <record id="action_exam_result_create" model="ir.actions.act_window">
            <field name="name">Nouveau Résultat</field>
            <field name="res_model">silina.exam.result</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
